                                {% if joueur.idJoueur.photo != null %}
                                    <img src="{{ asset('images/'~joueur.idJoueur.photo)}}">
                                {% else %}
                                    <i class="fas fa-user-alt fa-5x"></i>
                                {% endif %}
                                </div>
                                <div class="top">
                                {{ joueur.idJoueur.prenom }} {{ joueur.idJoueur.nom }}
                                </div>
