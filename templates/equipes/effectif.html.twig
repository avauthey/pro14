{# empty Twig template #}
{% extends "base.html.twig" %}
{% block title %}
    Effectif {{ equipe.nom }}
{% endblock %}
{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href='{{ path('index')}}'>Accueil</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href='{{ path('equipes')}}'>Equipes</a></li>
        <li class="breadcrumb-item" aria-current="page"><a href='{{ path('equipe',{'id':equipe.id})}}'>{{equipe.nom}}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Effectif</li>
    </ol>
</nav>
<div class='container-fluid'>
    <div class='row'>
        <div class='col-lg-12'>
            <h1>{{ equipe.nom ~' - '~ active }}</h1>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-2 top'>
            {{ include('equipes/blockMenu.html.twig',{'active': active, 'equipe' :equipe}) }}
        </div>
        <div class='col-lg-10 top'>
            <div class="row">
                <div class='col-lg-12'>
                    <h2>Saison {{saison}}</h2>
                </div>
            </div>
            <ul class="nav justify-content-end nav-pills" style="margin-top: 0">
                <li class="nav-item">
                    <a class="nav-link active" href="#" id="btnAvant">Avants</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="btnArriere">Arrières</a>
                </li>
            </ul>
            <div class="row" id="blockAvant">
                
                <div class="col-lg-12">
                    <h3>Avants</h3>
                </div>
                <div class="col-lg-12">
                    <h4>Piliers/Talonneurs</h4>
                </div>
                {% for joueur in joueurs %}
                    {% if joueur.idJoueur.poste.id == 1 or joueur.idJoueur.poste.id == 2 or joueur.idJoueur.poste.id == 3 %}
                <div class="col-lg-4 col-sm-6 text-center top">
                    <div class="card text-center border-vert" style="width: 18rem;height: 200px">
                        <a href='{{ path('consulter_joueur',{'id':joueur.idJoueur.id})}}' style='height: 100%' class="remove-link removeBorder">
                            <div class="uk-inline-clip uk-transition-toggle top" tabindex="0" style="width: 100%">
                                <!--<img src="images/dark.jpg" alt="">-->
                                <div>
                                {% if joueur.idJoueur.photo != null %}
                                    <img src="{{ asset('images/'~joueur.idJoueur.photo)}}">
                                {% else %}
                                    <i class="fas fa-user-alt fa-5x"></i>
                                {% endif %}
                                </div>
                                <div class="top">
                                {{ joueur.idJoueur.prenom }} {{ joueur.idJoueur.nom }}
                                </div>
                                <div class="top">
                                {{ joueur.idJoueur.poste.nom }}
                                </div>
                                <div class="uk-transition-fade uk-position-cover uk-position-small uk-overlay uk-overlay-default uk-flex uk-flex-center uk-flex-middle" >
                                    <p class="uk-h4 uk-margin-remove">Détails joueur</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                    {% endif %}
                {% endfor %}
                <hr />
                <div class="col-lg-12">
                    <h4>Deuxièmes lignes</h4>
                </div>
                {% for joueur in joueurs %}
                    {% if joueur.idJoueur.poste.id == 4 or joueur.idJoueur.poste.id == 5 %}
                <div class="col-lg-4 col-sm-6 text-center top">
                    <div class="card text-center border-vert" style="width: 18rem;height: 200px">
                        <a href='{{ path('equipe',{'id':equipe.id})}}' style='height: 100%' class="remove-link removeBorder">
                            <div class="uk-inline-clip uk-transition-toggle top" tabindex="0" style="width: 100%">
                                <!--<img src="images/dark.jpg" alt="">-->
