{% extends "base.html.twig" %}
{% block title %}
    Equipes
{% endblock %}
{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href='{{ path('index')}}'>Accueil</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a href='{{ path('equipes')}}'>Equipes</a></li>
    </ol>
</nav>
<div class='container-fluid'>
    <div class='row'>
        {% for equipe in equipes %}
        <div class='col-lg-4 col-sm-6 text-center top'>
            <div class="card text-center" style="width: 18rem;height: 200px">
                <a href='{{ path('equipe',{'id':equipe.id})}}' style='height: 100%'>
                    <div class="uk-inline-clip uk-transition-toggle" tabindex="0" style='width: 100%;height:100%'>
                       <img src="{{ asset('images/'~equipe.logo)}}" alt="logo {{ equipe.nom }}" width='150'  >
                       <div class="uk-transition-slide-bottom uk-position-bottom uk-overlay uk-overlay-default">
                           <p class="uk-h5 uk-margin-remove" style='font-weight: 600'>{{equipe.nom}}</p>
                       </div>
                    </div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}