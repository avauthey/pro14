{# empty Twig template #}
{% extends "base.html.twig" %}
{% block title %}
    Joueurs Guinness Pro 14
{% endblock %}
{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href='{{ path('index')}}'>Accueil</a></li>
        <li class="breadcrumb-item active" aria-current="page">Competition > Joueurs</li>
    </ol>
</nav>
<div class='container-fluid mb-5 pb-6'>
    <div class='row'>
        <div class='col-lg-12'>
            <h1>Joueurs</h1>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-2 mt-2'>
            {{ include('competition/blockMenu.html.twig',{'active': active}) }}
        </div>
        <div class="col-lg-10">
             {{ include('joueur/blockMenu.html.twig',{'active': activeSubMenu}) }}
            <div class="row">
                <div class="col-lg-12">
                    <h2>Rechercher par Equipe </h2>
                    <div class="row">
                        {% for equipe in equipes %}
                        <div class='col-lg-4 col-sm-6 text-center mt-2'>
                            <div class="card text-center" style="width: 18rem;height: 200px">
                                <a href='{{ path('effectif_equipe',{'id':equipe.id})}}' style='height: 100%'>
                                    <div class="uk-inline-clip uk-transition-toggle" tabindex="0" style='width: 100%;height:100%'>
                                       <img src="{{ asset('images/logo/'~equipe.logo)}}" alt="logo {{ equipe.nom }}" width='150'  >
                                       <div class="uk-transition-slide-bottom uk-position-bottom uk-overlay uk-overlay-default uk-overlay-default-modify">
                                           <p class="uk-h5 uk-margin-remove" style='font-weight: 600'>{{equipe.nom}}</p>
                                       </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
        