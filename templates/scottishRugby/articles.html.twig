{% extends "base.html.twig" %}
{% block title %}
    Scottish Rugby - Articles
{% endblock %}
{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page"><a href='{{ path('index')}}'>Accueil</a></li>
        <li class="breadcrumb-item active" aria-current="page">Scottish Rugby - Articles</li>
    </ol>
</nav>
<div class='container-fluid mb-5 pb-6'>
    <div class='row'>
        <div class='col-lg-12'>
            <h1>Articles</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10">
            {% for article in articles %}
                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-sm-3 align-self-center text-center px-1">
                            <img src="{{ asset('images/articles/article_'~article.id~'/'~article.miniature)}}"  alt="..." class="img-fluid">
                        </div>
                        <div class="col-sm-9">
                            <div class="card-body">
                                <h5 class="card-title">{{article.titre}}</h5>
                                <p class="card-text">{% if article.contenu|length > 100 %}{% set var = article.contenu|slice(0, 100)~"...</p>" %} {{ var | raw }}{% else %} {{ article.contenu|raw  }} {% endif %}</p>
                                <p class="card-text">
                                    {% if article.dateDerniereModification is not null %}
                                        <small class="text-muted">Dernière modification : {{article.dateDerniereModification|date('d/m/Y')}}</small>
                                    {%else%}
                                        <small class="text-muted">Dernière création : {{article.dateCreation|date('d/m/Y')}}</small>
                                    {% endif %}
                                </p>
                                <p class="card-text text-right"><a href="{{path('scottishRugby_article',{'id':article.id})}}">Lire plus <i class="fas fa-arrow-circle-right"></i> </a></p>
                            </div>
                        </div>
                    </div>
                </div>
                
                {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
